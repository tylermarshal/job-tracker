<h1>All Categories</h1>

<table>
  <% @categories.each do |category| %>
  <tr>
    <th><%= link_to category.title, category_path(category), class: "company-title"  %></th>
    <th><%= link_to "Edit", edit_category_path(category), class: "edit_delete"  %>
    <%= link_to "Delete", category_path(category), method: "delete", data: {confirm: "Really delete the category?"}, class: "edit_delete"  %></th>


  </tr>
  <% end %>
</table>
