<h1>Available Jobs for <%= @company.name %></h1>


<table>
  <tr>
    <th>Position</th>
    <th>City</th>
    <th>Interest</th>
  </tr>
  <% @company.jobs.each do |job| %>
  <tr>
    <td><%= link_to job.title, job_path(job) %></td>
    <td><%= job.city %></td>
    <td><%= job.level_of_interest %></td>
  </tr>
  <% end %>
</table>


<div class="create-new">
<%= link_to "Create New Job at #{@company.name}", new_company_job_path(@company), class: "edit_delete" %>
</div>

<h3 class="submitted_header">Contacts <%= @company.contacts.size %></h3>

<div class="submitted_contact">
  <%= render partial: 'companies/contact', collection: @company.contacts.reverse %>
</div>
<h3>Create a Contact</h3>
<div class="form">
  <%= render partial: 'contacts/form' %>
</div>

<%= link_to "<< Back to All Companies", companies_path %>
