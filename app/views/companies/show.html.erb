<h1>Available Jobs for <%= @company.name %></h1>


<table>
  <tr>
    <th>Position</th>
    <th>City</th>
    <th>Interest</th>
  </tr>
  <% @company.jobs.each do |job| %>
  <tr>
    <td><%= link_to job.title, job_path(job) %></td>
    <td><%= job.city %></td>
    <td><%= job.level_of_interest %></td>
  </tr>
  <% end %>
</table>


<div class="create-new">
<%= link_to "Create New Job at #{@company.name}", new_company_job_path(@company), class: "edit-delete" %>
</div>

<h3 class="submitted-header">Contacts (<%= @company.contacts.size %>)</h3>

<div class="submitted-contact">
  <table>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Email</th>
      <th>Company</th>
    </tr>
  <%= render partial: 'companies/contact', collection: @company.contacts.reverse %>
  </table>
</div>

<h3>Create a Contact</h3>
<div class="form">
  <%= render partial: 'contacts/form' %>
</div>


<%= link_to "<< Back to All Companies", companies_path, class: "back-button" %>
