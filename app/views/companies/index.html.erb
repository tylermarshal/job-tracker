<h1>All Companies</h1>

<table>
  <% @companies.sort_by(&:name).each do |company| %>
  <tr>
    <th><%= link_to company.name, company_path(company), class: "company-title" %></th>
    <th><%= link_to "Edit", edit_company_path(company), class: "edit-delete"  %>
    <%= link_to "Delete", company_path(company), method: "delete", data: {confirm: "Really delete the company?"}, class: "edit-delete"  %></th>
  </tr>
  <% end %>
</table>
<div class="create-new">
<%= link_to "Create a New Company", new_company_path, class: "edit-delete" %>
</div>
