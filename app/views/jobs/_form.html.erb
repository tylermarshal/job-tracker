<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category %>
  <%= f.select(:category_id , options_for_select(Category.all.sort_by(&:title).map {|p| [p.title, p.id]})) %>

  <%= f.submit, class: "submit_button" %>
<% end %>

<div><%= link_to "Create a New Category", new_category_path %></div>
