<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category %>
  <select id="category-dropdown" name="job[category_id]">
    <% @category.sort_by(&:title).each do |category| %>
      <option value="<%= category.id %>">
      <%= category.title.upcase %>
      </option>
    <% end %>
  </select>

  <%= f.submit %>
<% end %>

<div><%= link_to "Create a New Category", new_category_path %></div>
